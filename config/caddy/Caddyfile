:443 {
    tls /etc/certs/ssl/ssl_certificate_key.key /etc/certs/ssl/ssl_certificate.crt
    # Enable static file server 
    handle_path / {
		root * /var/www/html
		file_server
        file_server
        templates
        encode gzip
        try_files {path}.html {path}
	} 

	handle /health {
		respond "Ok" 200
	}

}



